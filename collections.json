            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Home Security System\",\n  \"address\": \"123 Main Street, Tashkent\",\n  \"is_active\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/arduino/{{device_id}}/update/",
